<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="#fff"
    >
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
    <Button
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:id="@+id/jadwal"
        android:background="@mipmap/ic_schedule"
        />

    <Button
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:id="@+id/form"
        android:background="@mipmap/logo_pesan"
         />
        <Button
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:id="@+id/jadwalujian"
            android:background="@mipmap/ic_schedule"
            />

    </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Kuliah"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="12dip"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kotak Saran"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="12dip">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal Ujian"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:textSize="12dip">
            </TextView>
            </TableRow>
    </TableLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
         >

        <ImageView
            android:id="@+id/logo_trisakti"
            android:layout_width="wrap_content"
            android:background="@mipmap/logo_trisakti"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/logo_trisakti"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:padding="5dp"
            android:textSize="20dip"
            android:text="STMT TRISAKTI"/>


    </RelativeLayout>
    <TextView
        android:id="@+id/header1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEKOLAH TINGGI MANAJEMEN TRANSPORTASI"
        android:textColor="#000000"
        android:textSize="12dip"
        android:layout_below="@id/text1"/>
    <TextView
        android:id="@+id/alamat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jl. IPN No 2  Cipinang Besar Selatan"
        android:textSize="12dip"
        android:textColor="#000000"
        android:layout_below="@id/header1"/>
    <TextView
        android:id="@+id/alamat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jakarta Timur - Indonesia"
        android:textSize="12dip"
        android:textColor="#000000"
        android:layout_below="@id/alamat1"/>
    <TextView
        android:id="@+id/telp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telp. +62218516050, 8569350"
        android:textSize="12dip"
        android:textColor="#000000"
        android:layout_below="@id/alamat2"/>
    <TextView
        android:id="@+id/web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.stmt-trisakti.ac.id"
        android:textSize="12dip"
        android:textColor="#000000"
        android:layout_below="@id/alamat2"/>


