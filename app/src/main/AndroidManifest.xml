<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mdmedia.stmt"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
    
    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/new_logo"
        android:theme="@style/AppTheme"
        android:name="com.mdmedia.stmt.AppController">
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:name="com.mdmedia.stmt.SplashScreen" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:name="com.mdmedia.stmt.MainActivity" >
        </activity>

        <activity
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:name="com.mdmedia.stmt.FormEmail" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:name="com.mdmedia.stmt.HomeActivity" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:name="com.mdmedia.stmt.UjianActivity" >
        </activity>
    </application>

</manifest>